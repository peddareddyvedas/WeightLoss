                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="1840" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp">

                                <TextView
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
