<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="380dp">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/iteam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Paratha"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="35dp"
                    android:text="Serving Size(Required)"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="30dp">

                <Spinner
                    android:id="@+id/spinnersize"
                    style="@style/SpinnerTheme"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@android:color/transparent"

                    />

                <View
                    android:id="@+id/view"
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:background="#cccccc"
                    android:text="Weight"
                    android:textSize="18dp" />


                <Spinner
                    android:id="@+id/spinnerunits"
                    style="@style/SpinnerTheme"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/spinnersize"
                    android:background="@android:color/transparent"

                    />

                <View
                    android:id="@+id/view2"
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/spinnersize"
                    android:background="#cccccc"
                    android:text="Weight"
                    android:textSize="18dp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="35dp"
                    android:text="Servings per Container(Required)"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:textStyle="normal" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp">

                <Spinner
                    android:id="@+id/spinnerpercontainer"
                    style="@style/SpinnerTheme"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@android:color/transparent"

                    />

                <View
                    android:id="@+id/view3"
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:background="#cccccc"
                    android:text="Weight"
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/measure"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="28dp"
                android:background="#f3efef">

                <TextView
                    android:id="@+id/estimatecalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:text="Estimated Calories" />

                <EditText
                    android:id="@+id/caloriesedittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@color/colorWhite"
                    android:text="0" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="Done"
                    android:textColor="@color/colorRed"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>