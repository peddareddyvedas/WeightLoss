                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="0" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="20dp"
                                android:layout_height="match_parent"


                                android:layout_marginLeft="10dp">

                                <TextView
